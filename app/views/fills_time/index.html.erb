    <tbody>

      <tr class="focused">
        <td>02</td>
        <td>9:00</td>
        <td>12:00</td>
        <td>13:00</td>
        <td>18:44</td>
      </tr>

      <% for i in 1..15 %>
        <tr>
          <td><%= i %></td>
          <td class="hour-sign-in"><%= time_build(xhour_in[0], xminute_in[0].to_s.rjust(2, '0')) %></td>
          <td>12:00</td>
          <td>13:00</td>
          <td class="hour-sign-out">18:44</td>
        </tr>
      <% end %>

    </tbody>
  </table>


</div>
