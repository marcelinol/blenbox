<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <h3>folha ponto</h3>
    </div>
    <div class="col-sm-4 text-right">
      <small>by rodrigo quaresma</small>
    </div>
  </div>

  <hr />

  <table class="table table-striped table-bordered table-sign-in">
    <thead>
      <tr>
        <th>dia</th>
        <th colspan="2">manhã</th>
        <th colspan="2">tarde</th>
      </tr>
      <tr>
        <th style="width:12%;">dia</th>
        <th style="width:22%;">entrada</th>
        <th style="width:22%;">saída</th>
        <th style="width:22%;">entrada</th>
        <th style="width:22%;">saída</th>
      </tr>
